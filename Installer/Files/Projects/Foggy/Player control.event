IF LADDERBELOW
    LET L = 2
    IF LADDERABOVE
        LET L = 1
    ENDIF
ELSE
    LET L = 0
ENDIF
IF KEY RIGHT
    IF CANGORIGHT
        IF KEY DOWN
            IF LADDERBELOW
            ELSE
                IF A = 0
                    ANIMATE
                ENDIF
                LET IMAGE 0
                SPRITERIGHT
            ENDIF
        ELSE
            IF KEY UP
                IF LADDERABOVE
                ELSE
                    LET IMAGE 0
                    IF A = 0
                        ANIMATE
                    ENDIF
                    SPRITERIGHT
                ENDIF
            ELSE
                LET D = 1
                LET IMAGE 0
                IF A = 0
                    ANIMATE
                    IF FRAME 0
                        BEEP 20
                    ENDIF
                ENDIF
                SPRITERIGHT
            ENDIF
        ENDIF
    ENDIF
ENDIF
IF KEY LEFT
    IF CANGOLEFT
        IF KEY DOWN
            IF LADDERBELOW
            ELSE
                IF A = 0
                    ANIMATE
                ENDIF
                LET IMAGE 1
                SPRITELEFT
            ENDIF
        ELSE
            IF KEY UP
                IF LADDERABOVE
                ELSE
                    LET IMAGE 1
                    IF A = 0
                        ANIMATE
                    ENDIF
                    SPRITELEFT
                ENDIF
            ELSE
                LET D = 2
                LET IMAGE 1
                IF A = 0
                    ANIMATE
                    IF FRAME 0
                        BEEP 20
                    ENDIF
                ENDIF
                SPRITELEFT
            ENDIF
        ENDIF
    ENDIF
ENDIF
IF KEY UP
    LET D = 3
    IF LADDERABOVE
        LET IMAGE 2
        IF A = 0
            ANIMATE
        ENDIF
        SPRITEUP
    ENDIF
ENDIF
IF KEY DOWN
    LET D = 3
    IF LADDERBELOW
        LET IMAGE 2
        IF A = 0
            ANIMATE
        ENDIF
        SPRITEDOWN
    ENDIF
ENDIF
IF KEY FIRE
    IF L = 1
    ELSE
        IF CANGODOWN
        ELSE
            BEEP 40
            TABLEJUMP
        ENDIF
    ENDIF
ENDIF
